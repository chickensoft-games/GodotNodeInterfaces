{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "--no-restore"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": [
        "clean_interfaces",
        "clean_adapters",
        "clean_loose_source_files"
      ]
    },
    {
      "label": "clean_interfaces",
      "type": "shell",
      "command": "rm ${workspaceFolder}/Chickensoft.GodotNodeInterfaces/src/interfaces/*.cs || exit 0",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "clean_adapters",
      "type": "shell",
      "command": "rm ${workspaceFolder}/Chickensoft.GodotNodeInterfaces/src/adapters/*.cs || exit 0",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "clean_loose_source_files",
      "type": "shell",
      "command": "rm ${workspaceFolder}/src/*.cs || exit 0",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
